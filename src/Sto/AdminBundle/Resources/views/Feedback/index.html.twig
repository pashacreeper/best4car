{% extends 'StoAdminBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title %}Список отзывов{% endblock %}

{% block header %}<h3>{{ block('title') }}</h3>{% endblock %}

{% block content %}


<form action="{{ path('feedback_filter') }}" method="post" id="filter-form" class="form-inline">
    <div class="row-fluid">
        <div class="span4">
           <a class="btn btn-info" href="{{ path('feedbacks_new') }}"><i class="icon-plus icon-white"></i> Создать новый отзыв</a>
        </div>
        <div class="span4">
            <label>Публикация:</label>
            <select name="filter_published" id="filter_published" class="btn-small" onchange="$('#filter-form').submit();">
                <option value="-1" >{{ 'form.all'|trans({}) }}</option>
                <option value="1"{% if app.session.get('filter_published') and app.session.get('filter_published') == 1 %} selected{% endif %}>Да</option>
                <option value="2"{% if app.session.get('filter_published') and app.session.get('filter_published') == 2 %} selected{% endif %}>Нет</option>
            </select>
        </div>
        <div class="span4 ">
            <label>Ответ на отзыв:</label>
            <select name="filter_answer" id="filter_answer" class="btn-small" onchange="$('#filter-form').submit();">
                <option value="-1" >{{ 'form.all'|trans({}) }}</option>
                <option value="1"{% if app.session.get('filter_answer') and app.session.get('filter_answer') == 1 %} selected{% endif %}>Да</option>
                <option value="2"{% if app.session.get('filter_answer') and app.session.get('filter_answer') == 2 %} selected{% endif %}>Нет</option>
            </select>
        </div>
    </div>
</form>


<table class="table table-hover table-condensed table-bordered table-striped">
    <thead>
        <tr>
            <th>№</th>
            <th>Дата посещения</th>
            <th>Имя мастера</th>
            <th>Автомобиль</th>
            <th>Гос. номер</th>
            <th>Номер заказа-наряда</th>
            <th>Автор отзыва</th>
            <th>Оценка компании</th>
            <th>Оценка отзыва</th>
            <th>Что оцениваем</th>
            <th>Публикация</th>
            <th>Ответ на отзыв</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('feedbacks_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>

            <td>{% if entity.visitDate %}{{ entity.visitDate|date('d.m.Y') }}{% endif %}</td>
            <td>{{ entity.mastername }}</td>
            <td>{{ entity.car }}</td>
            <td>{{ entity.gn }}</td>
            <td>{{ entity.nn }}</td>
            <td>{{ entity.user.username }}</td>
            <td>{{ entity.comapnyRating }}</td>
            <td>{{ entity.feedbackRating }}</td>
            <td>{{ entity.targetRating }}</td>
            <td>{% if entity.isPublished %}Да{% else %} Нет  {% endif %}</td>
            <td>{% if entity.feedbackAnswer %}Да{% else %} Нет  {% endif %}</td>
            <td>
                <a href="{{ path('feedbacks_show', { 'id': entity.id }) }}" class="icon-eye-close" title="Просмотр"></a>
                <a href="{{ path('feedbacks_edit', { 'id': entity.id }) }}" class="icon-pencil" title="{{ 'form.edit'|trans({}) }}"></a>
                <a href="#" data-delete-form="delete-form" data-delete-message="{{ 'form.sure_delete_message'|trans({}) }}" data-delete-item="{{entity.id}}" class="icon-trash" title="{{ "form.delete"|trans({}) }}"></a>
                {#<ul>
                    <li>
                        <a href="{{ path('feedbacks_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('feedbacks_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>#}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
