{% extends 'StoAdminBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title %}Редактирование отзыва{% endblock %}

{% block head_style %}
    {{ parent() }}
    <link href="{{ asset('bundles/stocontent/css/jquery.rating.css') }}" type="text/css" rel="stylesheet" media="screen" />
{% endblock %}

{% block head_script %}
    {{ parent() }}
    <script src="{{ asset('bundles/stocore/js/tiny_mce/tinymce.min.js') }}"></script>
    <script src="{{ asset('bundles/stocontent/js/jquery.rating.pack.js') }}"></script>
    {{ form_javascript(edit_form) }}
{% endblock %}

{% block header %}<h4>{{ block('title') }}</h4>{% endblock %}

{% block content %}
<form class="form-horizontal" action="{{ path('feedbacks_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="row-fluid">
        <div class="span6">
            {{ form_row(edit_form.visitDate) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.feedbackRating) }}
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            {{ form_row(edit_form.content) }}
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            {{ form_row(edit_form.car) }}
            {{ form_row(edit_form.mastername) }}
            {{ form_row(edit_form.published) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.statenumber) }}
            {{ form_row(edit_form.orderNumber) }}
        </div>
    </div>
    {{ form_widget(edit_form) }}
        <div class="form-actions">
            <input type="submit" class="btn btn-primary" value="{{ 'form.edit'|trans({}) }}"/>
            <a class="btn" href="{{ path('feedbacks') }}">{{ 'form.cancel'|trans({}) }}</a>
        </div>
</form>
{% endblock %}
