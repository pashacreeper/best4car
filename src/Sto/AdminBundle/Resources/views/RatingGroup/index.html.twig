{% extends 'StoAdminBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title %}Рейтинговые группы{% endblock %}

{% block header %}<h3>{{ block('title') }}</h3>{% endblock %}

{% block content %}
{% if app.session.hasFlash('notice') %}
    <div class="flash-notice">
        {{ app.session.flash('notice') }}
    </div>
{% endif %}
<table class="table table-hover table-condensed table-bordered table-striped">
    <thead>
        <tr>
            <th width="80">Название группы</th>

            <th width="50"></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.name }}</td>
            <td>
                <a href="{{ path('rating_groups_show', { 'id': entity.id }) }}" class="icon-eye-close" title="Просмотр"></a>
                <a href="{{ path('rating_groups_edit', { 'id': entity.id }) }}" class="icon-pencil" title="{{ 'form.edit'|trans({}) }}"></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>
{% endblock %}
