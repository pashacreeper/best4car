{% extends 'StoAdminBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title %}Создание пользователя{% endblock %}

{% block header %}<h4>{{ block('title') }}</h4>{% endblock %}

{% block content %}

<form action="{{ path('admin_user_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <div class="row-fluid">
        <div class="span6">
            {{ form_row(form.username) }}
            {{ form_row(form.plainPassword.password, {'label': 'Пароль', 'render_optional_text' : false}) }}
            {{ form_row(form.plainPassword.confirm_password, {'label': 'Подтвердите пароль', 'render_optional_text' : false}) }}
        </div>
        <div class="span6">
            <div class="controls">
                <img data-image="avatar" src="{{ asset('bundles/stocore/images/notimage.png') }}" style="width:120px" class="img-circle"/>
                    {{ form_errors(form.avatar) }}
                    {{ form_widget(form.avatar) }}
            </div>
        </div>
    </div>
    <div class="row-fluid">
        {{ form_row(form.description) }}
    </div>
    <hr style="margin: 0 0 20px 0;">
    <div class="row-fluid">
        <div class="span6">
            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.gender) }}
            {{ form_row(form.birthDate) }}
        </div>
        <div class="span6">
            {{ form_row(form.email) }}
            {{ form_row(form.phoneNumber) }}
            {{ form_row(form.groups) }}
            {{ form_row(form.ratingGroup) }}
        </div>
    </div>
    <hr style="margin: 0 0 20px 0;">
    <div class="row-fluid">
        <div class="span6">
            {{ form_row(form.linkVK) }}
            {{ form_row(form.vkontakteId) }}
            {{ form_row(form.linkFB) }}
        </div>
        <div class="span6">
            {{ form_row(form.linkGP) }}
            {{ form_row(form.autoProfilesLinks) }}
        </div>
    </div>
    <hr style="margin: 0 0 20px 0;">
    <div class="row-fluid">
        <div class="span6">
            {{ form_row(form.rating) }}
            {{ form_row(form.city) }}
        </div>
        <div class="span6">
            {{ form_row(form.linkGarage) }}
        </div>
    </div>
    {{ form_widget(form) }}
    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="{{ 'form.create'|trans({}) }}"/>
        <a class="btn" href="{{ path('admin_user') }}">{{ 'form.cancel'|trans({}) }}</a>
    </div>
</form>
{% endblock %}

{% block foot_script %}
{{ parent() }}
{% javascripts
    '@StoCoreBundle/Resources/public/js/bootstrap-inputmask.js'
    'bundles/stoadmin/js/script.js'
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}
