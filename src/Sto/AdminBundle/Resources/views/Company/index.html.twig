{% extends 'StoAdminBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title %}Company list{% endblock %}

{% block header %}<h3>{{ block('title') }}</h3>{% endblock %}

{% block content %}
<p>
    <a href="{{ path('company_new') }}" class="btn btn-small btn-info">Create a new company</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Logo</th>
            <th>Name</th>
            <th>Specialization</th>
            <th>Workingtime</th>
            <th>Address</th>
            <th>Rating</th>
            <th>Visible</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.logo }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.specialization }}</td>
            <td>{{ entity.workingTime }}</td>
            <td>{{ entity.address }}</td>
            <td>{{ entity.rating }}</td>
            <td>
                {% if entity.visible %}
                    <i class="icon-ok"></i>
                {% else %}
                    <i class="icon-remove"></i>
                {% endif %}
            </td>
            <td>
                <a href="#" class="icon-pencil" title="Edit"></a>
                <a href="#"  class="icon-trash" title="Remove"></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
