{% extends 'StoAdminBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title %}{{ image.name }}{% endblock %}

{% block header %}<h3>{{ block('title') }}</h3>{% endblock %}

{% block content %}
<form action="{{ path('company_update_image', {id: company.id, image_id:image.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <div class="control-group">
        <div class="span12">
            <img title="{{ image.name }}" alt="{{ image.name }}"  src="/../{{ storage_path }}/company/company_gallery/{{ image.imageName }}" class="img-rounded" style="width: 260px;">
        </div>
        <div class="span12">
            {{ form_row(form.image) }}
        </div>
        <div class="span12">
            {{ form_row(form.name) }}
        </div>
        <div class="span6">
            {{ form_row(form.visible) }}
        </div>

        {{ form_widget(form) }}
    <div>
    <div class="row"></div>
    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="Create" />
        <a href="{{ path('deals') }}" class="btn">Cancel</a>
    </div>
</form>

{% endblock %}
