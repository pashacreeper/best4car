{% extends 'StoAdminBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title %}Создание компании{% endblock %}

{% block header %}<h3>{{ block('title') }}</h3>{% endblock %}

{% block content %}
<form action="{{ path('company_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <div class="row-fluid">
        <div class="span6">
            {{ form_row(form.name) }}
            {{ form_row(form.phones) }}
            {{ form_row(form.address) }}
            {{ form_row(form.workingTime) }}
        </div>
        <div class="span6">
            <div class="controls">
                <img src="holder.js/120x120" width="120" class="img-circle"/>
            </div>
            {{ form_row(form.logo, {'label_render': false}) }}
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            {{ form_row(form.hourPrice) }}
            {{ form_row(form.services) }}
            {{ form_row(form.visible) }}
        </div>
        <div class="span6">
            {{ form_row(form.rating) }}
            {{ form_row(form.specialization) }}
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            {{ form_row(form.fullName) }}
            {{ form_row(form.slogan) }}
        </div>
    </div>
    {{ form_widget(form) }}
    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="Create" />
        <a href="{{ path('companies') }}" class="btn">Cancel</a>
    </div>
</form>
{% endblock %}

{% block foot_script %}
{{ parent() }}
{% javascripts
    '@StoCoreBundle/Resources/public/js/bootstrap-inputmask.js'
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}
