{% extends 'StoAdminBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title %}{{ company.name }}{% endblock %}

{% block header %}<h3>{{ block('title') }}</h3>{% endblock %}

{% block content %}
<div class="tabbable">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#1" data-toggle="tab">Information</a></li>
        <li><a href="#2" data-toggle="tab">Additional information</a></li>
        <li class="pull-right"><a href="{{ path('companies') }}">Back to list</a></li>
        <li class="pull-right"><a href="{{ path('company_edit', { 'id': company.id }) }}" >Edit company</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="1">
            <div class="invoice-container">
                <div class="page-header">
                    <div class="pull-right">
                        <img data-src="holder.js/120x120" class="img-circle" alt="120x120" style="width: 120px; height: 120px;">
                    </div>
                    <h3>{{ company.name }} <small>{{ company.slogan }}</small></h3>
                    <p>{{ company.notes }}</p>
                </div>
                <div class="row-fluid">
                    <div class="span4">
                        <p>{{ company.specialization }}</p>
                        <p>{{ company.services }}</p>
                        <p>{{ company.address }}</p>
                        <p>{{ company.workingTime }}</p>
                        <p>{{ company.hourPrice }}</p>
                    </div>
                    <div class="span4">
                        <p>{{ company.phones }}</p>
                        <p>{{ company.skype }}</p>
                        <p>{{ company.web }}</p>
                        <p>{{ company.email }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="2">
            <div class="invoice-container">
                <div class="page-header">
                    <div class="pull-right">
                        <img data-src="holder.js/120x120" class="img-circle" alt="120x120" style="width: 120px; height: 120px;">
                    </div>
                    <h3>{{ company.fullName }} <small>{{ company.slogan }}</small></h3>
                    <p>{{ company.description }}</p>
                </div>
                <div class="row-fluid">
                    <div class="span4">
                        <p>{{ company.additionalServices }}</p>
                        <p>{{ company.createtDate|date('Y-m-d H:i:s') }}</p>
                        <p>{{ company.rating }}</p>
                        <p>{{ company.reviews }}</p>
                        <p>{{ company.managers }}</p>
                    </div>
                    <div class="span4">
                        <p>{{ company.gps }}</p>
                        <p>{{ company.socialNetworks }}</p>
                        <p>{{ company.subscribable }}</p>
                        <p>{{ company.administratorContactInfo }}</p>
                        <p>{{ company.visible }}</p>
                    </div>
                </div>
                <div class="row-fluid">
                    <p>{{ company.photos }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
