{% extends 'StoAdminBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title %}Настройка показателей рейтинга{% endblock %}

{% block header %}<h4>{{ block('title') }}</h4>{% endblock %}

{% block content %}
{% if app.session.hasFlash('notice') %}
    <div class="flash-notice">
        {{ app.session.flash('notice') }}
    </div>
{% endif %}
<table class="table table-hover table-condensed">
    <thead>
        <tr>
            <th>Описание</th>
            <th width="65">Значение</th>
            <th width="65">Действия</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>
                <a href="{{ path('rating_points_edit', { 'id': entity.id }) }}">
                    {{ entity.description }}
                </a>
            </td>
            <td>
                {{ entity.value }}
            </td>
            <td>
                <center>
                <a href="{{ path('rating_points_edit', { 'id': entity.id }) }}" class="icon-edit" title="{{ 'form.edit'|trans({}) }}"></a>
                </center>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>
{% endblock %}
