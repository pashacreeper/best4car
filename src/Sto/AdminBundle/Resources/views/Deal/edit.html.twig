{% extends 'StoAdminBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title %}Редактирование акции{% endblock %}

{% block header %}<h3>{{ block('title') }}</h3>{% endblock %}

{% block content %}
<form action="{{ path('deal_update', { 'id': deal.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    <div class="control-group">
        <div class="span6">
            {{ form_row(edit_form.name) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.company) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.services) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.startDate) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.endDate) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.startTime) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.endTime) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.terms) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.place) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.type) }}
        </div>
        <div class="span12">
            {{ form_row(edit_form.description) }}
        </div>
        <div class="span12">
            {{ form_row(edit_form.contactInformation) }}
        </div>
        <div class="row-fluid">
            <div class="span4">
                <div class="control-group">
                    <div class="controls">
{% if deal.imageName %}
                        <img src="/../{{ storage_path }}/deal_image/{{ deal.imageName }}?{{ random() }}" width="160" class="img-polaroid"/>
{% else %}
                        <img src="holder.js/160x140/text:Фото" class="img-polaroid">
{% endif %}
                    </div>
                    {{ form_row(edit_form.image) }}
                </div>
            </div>
            <div class="span4">
                <div class="control-group">
                    <div class="controls">
{% if deal.imageName2 %}
                        <img src="/../{{ storage_path }}/deal_image/{{ deal.imageName2 }}?{{ random() }}" width="160" class="img-polaroid"/>
{% else %}
                        <img src="holder.js/160x140/text:Фото" class="img-polaroid">
{% endif %}
                    </div>
                    {{ form_row(edit_form.image2) }}
                </div>
            </div>
            <div class="span4">
                <div class="control-group">
                    <div class="controls">
{% if deal.imageName3 %}
                        <img src="/../{{ storage_path }}/deal_image/{{ deal.imageName3 }}?{{ random() }}" width="160" class="img-polaroid"/>
{% else %}
                        <img src="holder.js/160x140/text:Фото" class="img-polaroid">
{% endif %}
                    </div>
                    {{ form_row(edit_form.image3) }}
                </div>
            </div>
        </div>
        {{ form_widget(edit_form) }}
    <div>
    <div class="row"></div>
    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="Сохранить" />
        <a href="{{ path('deals') }}" class="btn">Отмена</a>
    </div>
</form>
{% endblock %}
