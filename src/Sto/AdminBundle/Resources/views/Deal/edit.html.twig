{% extends 'StoAdminBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title %}Редактирование акции{% endblock %}

{% block header %}<h3>{{ block('title') }}</h3>{% endblock %}

{% block content %}
<form action="{{ path('deal_update', { 'id': deal.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    <div class="row-fluid">
        <div class="span6">
            {{ form_row(edit_form.name) }}
            {{ form_row(edit_form.company) }}
            {{ form_row(edit_form.type) }}
        </div>
        <div class="span6">
            <div class=" control-group">
                <label class="control-label required">
                    Сроки акции
                </label>
                <div class="controls">
                    {{ form_errors(edit_form.startDate) }}
                    {{ form_widget(edit_form.startDate) }}
                    {{ form_errors(edit_form.endDate) }}
                    {{ form_widget(edit_form.endDate) }}
                </div>
            </div>
            <div class=" control-group">
                <label class="control-label required">
                    Время акции
                </label>
                <div class="controls">
                    {{ form_errors(edit_form.startTime) }}
                    {{ form_widget(edit_form.startTime) }}
                    {{ form_errors(edit_form.endTime) }}
                    {{ form_widget(edit_form.endTime) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        {{ form_row(edit_form.description) }}
    </div>
    <hr style="margin: 0 0 20px 0;">
    <div class="row-fluid">
        <div class="span4">
            <div class="control-group">
                <div class="control">
{% if deal.imageName %}
                    <img src="/../{{ storage_path }}/deal_image/{{ deal.imageName }}" width="120" class="img-polaroid"/>
{% else %}
                    <img src="holder.js/120x100/text:Фото" class="img-polaroid">
{% endif %}
                    {{ form_errors(edit_form.image) }}
                    {{ form_widget(edit_form.image) }}
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group">
                <div class="control">
{% if deal.imageName2 %}
                        <img src="/../{{ storage_path }}/deal_image/{{ deal.imageName2 }}" width="120" class="img-polaroid"/>
{% else %}
                        <img src="holder.js/120x100/text:Фото" class="img-polaroid">
{% endif %}
                    {{ form_errors(edit_form.image2) }}
                    {{ form_widget(edit_form.image2) }}
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group">
                <div class="control">
{% if deal.imageName3 %}
                        <img src="/../{{ storage_path }}/deal_image/{{ deal.imageName3 }}" width="120" class="img-polaroid"/>
{% else %}
                        <img src="holder.js/120x100/text:Фото" class="img-polaroid">
{% endif %}
                    {{ form_errors(edit_form.image3) }}
                    {{ form_widget(edit_form.image3) }}
                </div>
            </div>
        </div>
    </div>
    <hr style="margin: 0 0 20px 0;">
    <div class="row-fluid">
        <div class="span6">
            {{ form_row(edit_form.services) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.place) }}
        </div>
    </div>
    {{ form_widget(edit_form) }}
    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="Сохранить" />
        <a href="{{ path('deals') }}" class="btn">Отмена</a>
    </div>
</form>
{% endblock %}
