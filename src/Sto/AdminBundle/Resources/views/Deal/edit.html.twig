{% extends 'StoAdminBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title %}Edit Deal{% endblock %}

{% block header %}<h3>{{ block('title') }}</h3>{% endblock %}

{% block content %}
<form action="{{ path('deal_update', { 'id': deal.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    <div class="control-group">
        <div class="span6">

        </div>
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <img src="/../{{ storage_path }}/deal_image/{{ deal.imageName }}?{{ random() }}" width="160"/>
                </div>
            </div>
        </div>
        <div class="span6">
            {{ form_row(edit_form.name) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.image) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.company) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.services) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.startDate) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.endDate) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.startTime) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.endTime) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.terms) }}
        </div>
        <div class="span6">
            {{ form_row(edit_form.place) }}
        </div>
        <div class="span12">
            {{ form_row(edit_form.type) }}
        </div>
        <div class="span12">
            {{ form_row(edit_form.description) }}
        </div>
        <div class="span12">
            {{ form_row(edit_form.contactInformation) }}
        </div>
        {{ form_widget(edit_form) }}
    <div>
    <div class="row"></div>
    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="Save changes" />
        <a href="{{ path('deals') }}" class="btn">Cancel</a>
    </div>
</form>
{% endblock %}
