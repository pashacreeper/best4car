{% from 'MopaBootstrapBundle::flash.html.twig' import flash, advanced_flash %}

<div class="row-fluid">
    <div class="span10 offset1">
        <div class="pull-right">
            <ul class="nav nav-pills" id="myTab">
                <li class="active">
                    <a href="#personal"><i class="icon-b4c-user"></i> Профиль</a>
                </li>
                <li>
                    <a href="#garage"><i class="icon-b4c-garage"></i> Гараж</a>
                </li>
                <li>
                    <a href="#feedbacks"><i class="icon-b4c-comment"></i> Отзывы <span class="badge badge-warning">{{ user.feedbacks|length }}</span></a>
                </li>
            </ul>
        </div>
    </div>
</div>
<hr style="margin: 5px 0;">
<div class="tab-content">
    <div class="tab-pane active" id="personal">
        <div class="row-fluid">
            <div class="span4">
                <center>
{% if user.avatar %}
                    <img id="avatar" src="{{ vich_uploader_asset(user, 'avatar') }}" style="width:200px" class="img-polaroid"/>
{% else %}
                    <img src="{{ asset('bundles/stocore/images/user_avatar.jpg') }}" style="width:200px" class="img-polaroid"/>
{% endif %}
                </center>
            </div>
            <div class="span8">
                <h5>Общая информация</h5>
                <div class="row-fluid">
                    <div class="span10">
                        <div class="well">
                            <div class="row-fluid">
                                <div class="span6">
                                    <p><b>{{ user.firstName }}</b></p>
                                    <p><i class="icon-b4c-phone"></i> {{ user.phoneNumber }}</p>
                                    <p>
                                        <i class="icon-b4c-star"></i>
                                        <i class="icon-b4c-star"></i>
                                        <i class="icon-b4c-star-half"></i>
                                        <i class="icon-b4c-star-empty"></i>
                                        <i class="icon-b4c-star-empty"></i>
                                    </p>
                                </div>
                                <div class="span6">
                                    <p><i class="icon-b4c-calendar"></i> {{ user.birthDate|date('d.m.Y') }}</p>
                                    <p><i class="icon-b4c-mail"></i> {{ user.email }}</p>
                                    <p><i class="icon-b4c-group"></i> {% if user.ratingGroup %}{{ user.ratingGroup.name }}{% endif %}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h5>Внешние профили</h5>
                <div class="row-fluid">
                    <div class="span10">
                        <div class="well">
                            <div class="row-fluid">
                                <div class="span6">
                                    <p>
                                        <i class="icon-b4c-vkontakte"></i>
{% if user.linkVK  %}
                                         <a href="{{ user.linkVK }}" target="_blank">{{ user.linkVK }}</a>
{% else %}
                                         <a href="#">Ссылка на профиль отсутствует</a>
{% endif %}
                                    </p>
                                    <p>
                                        <i class="icon-b4c-truck"></i>
{% if user.autoProfilesLinks  %}
                                     <a href="{{ user.autoProfilesLinks }}" target="_blank">{{ user.autoProfilesLinks }}</a>
{% else %}
                                     <a href="#">Ссылка на профиль отсутствует</a>
{% endif %}
                                    </p>
                                </div>
                                <div class="span6">
                                    <p>
                                        <i class="icon-b4c-facebook"></i>
{% if user.linkFB  %}
                                         <a href="{{ user.linkFB }}" target="_blank">{{ user.linkFB }}</a>
{% else %}
                                         <a href="#">Ссылка на профиль отсутствует</a>
{% endif %}
                                    </p>
                                    <p>
                                        <i class="icon-b4c-googleplus"></i>
{% if user.linkGP  %}
                                         <a href="{{ user.linkGP }}" target="_blank">{{ user.linkGP }}</a>
{% else %}
                                         <a href="#">Ссылка на профиль отсутствует</a>
{% endif %}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h5>О себе:</h5>
                <div class="row-fluid">
                    <div class="span10">
{% if user.description %}
                        <div class="well">
                            {{ user.description }}
                        </div>
{% else %}
                        <div class="well">
                            Пользователь не оставил информации о себе.
                        </div>
{% endif %}
                    </div>
                </div>
            </div>
        </div>
        <hr style="margin: 5px 0;">
        <div class="offset1">
            <div class="control-group">
                <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-warning">Редактировать</a>
            </div>
        </div>
    </div>
    <div class="tab-pane" id="garage">
        <div class="row-fluid">
            <div class="span10 offset1">
                {{ advanced_flash(true, 'СКОРО!', 'Данная страница находится в разработке.', false, true) }}
            </div>
        </div>
    </div>
    <div class="tab-pane" id="feedbacks">
        <div class="row-fluid">
{% if user.feedbacks %}
{% for feedback in user.feedbacks %}
            <div class="span10 offset1">
                <blockquote>
                    <div class="row-fluid">
                        <div class="span6">
                            <i class="icon-b4c-star"></i>
                            <i class="icon-b4c-star"></i>
                            <i class="icon-b4c-star"></i>
                            <i class="icon-b4c-star"></i>
                            <i class="icon-b4c-star-half"></i>
                        </div>
                        <div class="span6">
                            <p class="pull-right">
                                <i class="icon-b4c-thumbs-up"></i> 15
                                <i class="icon-b4c-thumbs-down"></i> 53
                            </p>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <p>{{ feedback.content }}</p>
                    </div>
                </blockquote>
{% if feedback.feedbackAnswer %}
                <div class="row-fluid">
                    <blockquote class="well">
                        <div class="row-fluid">
                            <div class="span7">
                                <p>{{ feedback.feedbackAnswer.answer }}</p>
                            </div>
                            <div class="span5">
                                <div class="row-fluid">
                                    <div class="span2">
                                        <center><img src="http://placehold.it/39x39"></center>
                                    </div>
                                    <div class="span8">
                                        <h5>{{ feedback.feedbackAnswer.owner.firstName }} {{ feedback.feedbackAnswer.owner.lastName }}</h5>
                                        <p><small>Старший менеджер</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <p class="pull-right muted">
                                <i class="icon-thumbs-up"></i> 15
                                <i class="icon-thumbs-down"></i> 53
                            </p>
                        </div>
                    </blockquote>
                </div>
{% endif %}
            </div>
{% endfor %}
{% else %}
            {{ advanced_flash(true, 'СКОРО!', 'Пользователь не оставлял отзывы.', false, true) }}
{% endif %}
        </div>
    </div>
</div>
