<div class="row-fluid">
    <div class="span12">
        <div id="myCarousel" class="carousel slide" style="margin: 0;">
{% if gallery and gallery | length > 0 %}
            <div class="carousel-inner">
{% for item in gallery %}
                <div class="{% if loop.first %}active{% endif %} item">
                    <img src="{{ vich_uploader_asset(item, 'image') }}" alt="{{ item.name }}" style="width: 100%; height: 275px;">
                    <div class="carousel-caption">
                        <h4>
                            {{ item.name }}
                            {% if app.user == item.user %}
                                <a href="{{ path('profile_user_gallery_remove', {'id': item.id}) }}" class="pull-right icon-b4c-trash" style="color: #fff;"></a>
                            {% endif %}
                        </h4>
                    </div>
                </div>
{% endfor %}
            </div>
            <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
{% else %}
            <div class="carousel-inner">
                <div class="item active">
                    <img src="{{ asset('bundles/stocore/images/notimage.png') }}" style="width: 100%; height: 275px;">
                </div>
            </div>
{% endif %}
        </div>
    </div>
</div>
