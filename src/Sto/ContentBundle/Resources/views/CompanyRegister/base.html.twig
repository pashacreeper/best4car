{% extends 'StoContentBundle:CompanyRegister:_newCompany.html.twig' %}

{% form_theme form with 'StoContentBundle::formTheming.html.twig' %}

{% block title %}
    {{ parent() }}
    – Общие сведения
{% endblock %}

{% block content %}
    <section class="contentMain row">
    <div class="content">
        <ul class="stepRegistration" id="stepRegistration">
            <li class="stepRegistrationItem firstStep"><span class="stepLink">Личные данные</span></li>
            <li class="stepRegistrationItem centerStep active"><span data-content="#general-data" class="stepLink">Общие сведения</span></li>
            <li class="stepRegistrationItem centerStep" id="business-profile-tab"><span data-content="#business-profile"  class="stepLink">Профиль деятельности</span></li>
            <li class="stepRegistrationItem centerStep" id="contact-info-tab"><span data-content="#contact-info"  class="stepLink">Контактные данные</span></li>
            <li class="stepRegistrationItem endStep" id="photo-tab"><span data-content="#photos" class="stepLink">Фотографии</span></li>
        </ul>
        <form name="register-form" action="{{ path('registration_company_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
            <div class="tab-content">
                <div class="row-fluid">
                    <div class="span10">
                        <p class="contentLabel">
                            {{ form_errors(form.fullName) }}
                            {{ form_label(form.fullName) }}
                            <span class="hint-text">Полное наименование юр.лица, например: ООО «Авто Эксперт»</span>
                            {{ form_widget(form.fullName) }}
                        </p>
                        <p class="contentLabel">
                            {{ form_errors(form.name) }}
                            {{ form_label(form.name) }}
                            <span class="hint-text">Общеупотребимое название компании, например: BEST4CAR</span>
                            {{ form_widget(form.name) }}
                        </p>
                        <p class="contentLabel">
                            {{ form_errors(form.slogan) }}
                            {{ form_label(form.slogan) }}
                            <span class="hint-text">Например: Автоэксперты рекомендуют. Лучшее для вашего авто!</span>
                            {{ form_widget(form.slogan) }}
                        </p>
                        <div class="contentLabel clear datePickerInput">
                            {{ form_label(form.createtDate) }}
                            {{ form_widget(form.createtDate) }}
                        </div>
                        {{ form_errors(form.createtDate) }}
                        <div class="contentLabelNoOverflow">
                            {{ form_label(form.city) }}
                            {{ form_widget(form.city) }}
                        </div>
                        <br>
                        <div class="addLogo clear">
                            {{ form_label(form.logo) }}
                            <div class="addLogoImgWrap">
                                <div class="addLogoImg" id='picture-preview-wrapper'></div>
                            </div>
                            <div class="adminBlockImg span6">
                                {{ form_widget(form.logo) }}
                                <span class="addPhotoBtn">Загрузить изображение<i class="addPhoto"></i></span>
                                <p class="additionalInfo">
                                    Логотип должен быть вписан в квадрат с белым или прозрачным фоном. <br/>
                                    Формат: JPEG, PNG, GIF не более 1Мб
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bottomContent">
                    <span class="alertSelect hide">Необходимо заполнить все обязательные поля</span>
                    <a href="#" data-toggle="tab" class="btnNext addPhotoBtn" data-next="#business-profile">Продолжить</a>
                </div>
            </div>
        </form>
    </div>
    </section>
{% endblock %}
