<div class="contentRight">
    <form action method="post" class="inputTypeForm" id="advanced-search-form">
        <p class="contentRightItem">
            <label for="typeCompany">Тип компании</label>
        </p>
        <div class="basket__cont__body__bottom__paper">
            <div class="lineForm">
                {{ form_widget(form.companyType) }}
            </div>
        </div>

        <div id="subCompanyTypeWrapper" style="display: none;">
            <p class="contentRightItem">
                <label for="addtypeCompany">Подтип компании</label>
            </p>
            <div class="basket__cont__body__bottom__paper">
                <div class="lineForm">
                    {{ form_widget(form.subCompanyType) }}
                </div>
            </div>
        </div>

        <p class="contentRightItem">
            <label for="inputBrandField">Специализация на марке</label>
        </p>
        <div class="basket__cont__body__bottom__paper" style="float: none; margin-bottom: 30px;">
            <div class="lineForm">
                {{ form_widget(form.auto) }}
            </div>
        </div>
        <div class="reitingSlyder">
            <p class="contentAmount">
                <span id="lableAmount" for="amount">Минимальный рейтинг:</span>
                <input type="text" id="amount" data-serarch-form="rating" name="rating" />
            </p>
            <div id="slider-range-max"></div>
            <span class="indexSlyderLeft">0</span>
            <span class="indexSlyderRight">10</span>
        </div>

        <p class="contentRightItem">
            <label>Дополнительные услуги</label>
        </p>
        <ul class="btnFiltr-group dop">
            <li>
                <input id="CheckBox4" class="checkBox" type="checkbox" data-search-form="evaquate" name="additional_services[evaquate]"/>
                <label class="btnFiltr btnFiltrFirst" for="CheckBox4">
                    <i class="iconDopWork iconevacuation" title="Эвакуатор"></i>
                </label>
            </li>
            <li>
                <input id="CheckBox5" class="checkBox" type="checkbox" data-search-form="wifi" name="additional_services[wifi]"/>
                <label class="btnFiltr" for="CheckBox5">
                    <i class="iconDopWork iconwifi" title="WiFi"></i>
                </label>
            </li>
            <li>
                <input id="CheckBox6" class="checkBox" type="checkbox" data-search-form="tv" name="additional_services[tv]"/>
                <label class="btnFiltr" for="CheckBox6">
                    <i class="iconDopWork iconotdyh" title="Телевизор"></i>
                </label
            </li>
            <li>
                <input id="CheckBox7" class="checkBox" type="checkbox" data-search-form="coffee" name="additional_services[coffe]"/>
                <label class="btnFiltr" for="CheckBox7">
                    <i class="iconDopWork iconkofe" title="Кофе"></i>
                </label>
            </li>
            <li>
                <input id="CheckBox8" class="checkBox" type="checkbox" data-serarch-form="credit-card" name="additional_services[credit_card]"/>
                <label class="btnFiltr" for="CheckBox8">
                    <i class="iconDopWork iconcard" title="Кредитные карты"></i>
                </label>
            </li>
            <li>
                <input id="CheckBox9" class="checkBox" type="checkbox" data-serarch-form="restaurant" name="additional_services[cafe]"/>
                <label class="btnFiltr btnFiltrLast" for="CheckBox9">
                    <i class="iconDopWork iconcafe" title="Кафе"></i>
                </label>
            </li>
        </ul>
        <p class="contentRightItem labelCheckBox">
            <span class="checkBox__autograf__wrap">
                <input id="checkBox__autograf1" type="checkbox" data-serarch-form="deals" name="deals">
                Только с акциями
            </span>
        </p>
        <p class="cleanSearch secondaryLink" id="cleanSearch">Очистить поиск</p>
    </form>
</div>
