{% extends 'StoContentBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title company.name %}

{% block head_style %}
    {{ parent() }}
    <link href="{{ asset('bundles/stocontent/css/jquery.rating.css') }}" type="text/css" rel="stylesheet" media="screen" />
{% endblock %}

{% block head_script %}
    {{ parent() }}
    <script src="{{ asset('bundles/stocore/js/tiny_mce/tinymce.min.js') }}"></script>
    <script src="{{ asset('bundles/stocontent/js/jquery.rating.pack.js') }}"></script>
    {{ form_javascript(form) }}
{% endblock %}

{% block content %}
<div class="row-fluid">
    <h3>Ваш отзыв о компании</h3>
    <p>{{ company.name }}</p>
</div>
<div class="row-fluid">
    <div class="span8">
        <form action="{{ path('content_company_feedbacks_create', { 'id': company.id }) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
            <div class="row-fluid">
                <div class="well">
                    <div class="row-fluid">
                        <div class="span12">
                            {{ form_row(form.feedbackRating) }}
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            {{ form_row(form.priceLevel) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    {{ form_row(form.content) }}
                </div>
            </div>
            <div class="row-fluid">
                <h5>Укажите подробности о визите</h5>
                <p>(необязательно)</p>
            </div>
            <hr>
            <div class="row-fluid">
                <div class="span6">
                    {{ form_row(form.visitDate) }}
                    {{ form_row(form.mastername) }}
                    {{ form_row(form.orderNumber) }}
                </div>
                <div class="span6">
                    {{ form_row(form.car) }}
                    {{ form_row(form.statenumber) }}
                </div>
            </div>
            {{ form_rest(form) }}
            <div class="form-actions">
                <input type="submit" class="btn btn-primary" value="Отправить отзыв"/>
            </div>
        </form>
    </div>
    <div class="span4">
        <div class="thumbnail">
            <img src="http://placehold.it/240x400">
        </div>
    </div>
</div>
{% endblock %}
