<div class="row-fluid">
    <div class="span8" data-content="feedbacks">
        <div class="row-fluid">
            <div class="span4">
                <ul class="nav nav-tabs">
                    <li><small>Сортировать по:</small></li>
                    <li class="active">
                        <a href="#" data-tabs="sort-date">дате</a>
                    </li>
                    <li><a href="#" data-tabs="sort-rating">рейтингу</a></li>
                </ul>
            </div>
            <div class="span8">
                <ul class="nav nav-tabs">
                    <li><small>Показывать:</small></li>
                    <li class="active">
                        <a href="#" data-tabs="filter-all">все</a>
                    </li>
                    <li><a href="#" data-tabs="filter-positive">положительные</a></li>
                    <li><a href="#" data-tabs="filter-negative">отрицательные</a></li>
                    <li><a href="#" data-tabs="filter-useful">полезные</a></li>
                </ul>
            </div>
        </div>
        <div class="row-fluid"><div class="span12">Количество отзывов: <b>{{ company.feedbacks | length }}</b></div></div>
        <div data-x-container="feedbacks">
            {{ render(controller('StoContentBundle:Company:feedbacks', {'id':company.id})) }}
        </div>
        <script>function getEntityId(){ return {{ company.id }}; }</script>
        <input type="hidden" data-type="company">
    </div>
    <div class="span4">
        {% if (not isManager) and (not app.security.isGranted('ROLE_FROZEN')) and  (app.security.isGranted('ROLE_USER'))  %}
            <a class="btn btn-large btn-block" href="{{ path('content_company_feedbacks_add', { 'id' : company.id }) }}">Оставить отзыв <span class="pull-right">{{ company.feedbacks | length }}</span></a>
        {% endif %}
        <div class="thumbnail">
            <img src="http://placehold.it/240x400">
        </div>
    </div>
</div>
