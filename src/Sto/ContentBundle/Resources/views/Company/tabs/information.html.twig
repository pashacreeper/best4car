<div class="row-fluid">
    <div class="span8">
        <div id="myCarousel" class="carousel slide">
{% if company.gallery|length %}
            <div class="carousel-inner">
{% for photo in company.gallery %}
                <div class="item{% if loop.first %} active{% endif %}">
                    <img title="{{ photo.name }}" alt="{{ photo.name }}" src="{{ vich_uploader_asset(photo,'image') | imagine_filter('company_gallery_filter') }}" style="width: 100%; height: 276px;">
                </div>
{% endfor %}
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
{% else %}
            <div class="carousel-inner">
                <div class="item active">
                    <img src="{{ asset('bundles/stocore/images/notimage.png') }}" style="width: 100%; height: 276px;">
                </div>
            </div>
{% endif %}
        </div>
        <div class="row-fluid">
            <div class="span8">
                <div class="row-fluid">
                    <h4>Специализация и услуги</h4>
                    <div class="accordion" id="accordion">
{% for specialization in company.specialization %}
                        <div class="accordion-group">
                            <div class="accordion-heading">
                                <div class="row-fluid">
                                    <div class="span2">
                                        <center><img src="http://placehold.it/44x46"></center>
                                    </div>
                                    <div class="span10">
                                        <a class="accordion-toggle" data-toggle="collapse" href="#collapse{{ specialization.id }}">{{ specialization.name }}</a>
                                        <p>Независимый мультибрендовый</p>
                                        <div id="collapse{{ specialization.id }}" class="accordion-body collapse">
                                              <div class="accordion-inner">
                                                Работы не уточнены
                                              </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
{% endfor %}
                    </div>
                </div>
                <div class="row-fluid">
                    <h4>Дополнительные услуги</h4>
{% for additionalService in company.additionalServices %}
                    <div class="row-fluid">
                       <img src="http://placehold.it/32x32"> {{ additionalService.name }}
                    </div>
{% endfor %}
                </div>
                <div class="row-fluid">
                    <h4>О компании</h4>
                    <p>{{ company.description }}</p>
                </div>
{% if company.managers|length %}
                <div class="row-fluid">
                    <div class="well">
                        <h4>Менеджеры компании</h4>
                        <div class="row-fluid">
{% for manager in company.companyManager %}
                            <div class="span6">
                                <div class="row-fluid">
                                    <div class="span2">
                                        <img src="http://placehold.it/36x36">
                                    </div>
                                    <div class="span10">
                                        <p>{{ manager.user.firstName ~' '~ manager.user.lastName }}</p>
                                        <h6>{% if manager.phone and manager.phone != '' %}{{ manager.phone }}{% else %}{{ manager.user.phoneNumber }}{% endif %}</h6>
                                    </div>
                                </div>
                            </div>
{% endfor %}
                        </div>
                    </div>
                </div>
{% endif %}
            </div>
            <div class="span4">
                <div class="row-fluid">
                    <h5>Обслуживаемые бренды</h5>
{% if company.autos|length %}
                    <ul type="square">
                        {% for car in company.autos %}
                          <li >{{ car }}</li>
                        {% endfor %}
                    </ul>
{% else %}
                    <p>Данные отсутствуют</p>
{% endif %}
                </div>
                <div class="row-fluid">
                    <h5>Опыт работы</h5>
{% if company.createtDate|date('Y-m-d') < "now"|date('Y-m-d') %}
                    <p>{{ time_diff(company.createtDate) }}</p>
{% else %}
                    <p>Данные отсутствуют</p>
{% endif %}
                </div>
                <div class="row-fluid">
                    <h5>Нормочас</h5>
                    <p>{{ company.hourPrice }}  {{company.currency.shortName}}</p>
                </div>
                <div class="row-fluid">
                    <h5>Адрес</h5>
                    <p><a href="#" onclick=" $('#myModal').modal();">{{ company.address }}</a></p>
                </div>
                <div class="row-fluid">
                    <h5>Контактные телефоны</h5>
{% for phone in company.phones %}
{% if loop.first %}
                        <h5>{{ phone.description }}</h5>
                        <h4>{{ phone.phone }}</h4>
{% if company.phones|length > 1 %}
                        <dl>
{% endif %}
{% else %}
                            <dt>{{ phone.description }}</dt>
                            <dd>{{ phone.phone }}</dd>
{% if loop.last %}
                        </dl>
{% endif %}
{% endif %}
{% endfor %}
                </div>
                <div class="row-fluid">
                    <h5>Часы работы</h5>
                    <p>09:00-21:00 (пн-пт)</p>
                    <p>09:00-20:00 (сб-вс)</p>
                </div>
                <div class="row-fluid">
                    <dl class="dl-horizontal">
                        <dt class="span2" style="margin:0;"><i class="icon-b4c-globe"></i></dt>
                        <dd class="span9"><a href="{{ company.web }}">{{ company.web }}</a></dd>
                        <dt class="span2" style="margin:0;"><i class="icon-b4c-skype"></i></dt>
                        <dd class="span9"><a href="skype:{{ company.skype }}?chat">{{ company.skype }}</a></dd>
                        <dt class="span2" style="margin:0;"><i class="icon-b4c-mail"></i></dt>
                        <dd class="span9"><a href="mailto:{{ company.email }}">{{ company.email }}</a></dd>
                    </dl>
                </div>
                <div class="row-fluid">
                    <dl class="dl-horizontal">
                        <dt class="span2" style="margin:0;"><i class="icon-b4c-facebook"></i></dt>
                        <dd class="span9">Facebook</dd>
                        <dt class="span2" style="margin:0;"><i class="icon-b4c-vkontakte"></i></dt>
                        <dd class="span9">ВКонтакте</dd>
                        <dt class="span2" style="margin:0;"><i class="icon-b4c-twitter"></i></dt>
                        <dd class="span9">Twitter</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="span4">
        <a class="btn btn-large btn-block" href="{{ path('content_company_feedbacks_add', { 'id' : company.id }) }}">Оставить отзыв <span class="pull-right">{{ company.feedbacks | length }}</span></a>
        <a class="btn btn-large btn-block" href="{% if app.user %} # {% else %} {{ path('fos_user_security_login') }}{% endif %}">Добавить фото</a>
        <div class="thumbnail">
             <img data-image="logo" src="{{vich_uploader_asset(company, 'logo')}}"/>
        </div>
    </div>
</div>
<div id="myModal" class="modal hide fade" style="width:720px;">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    </div>
    <div class="modal-body">
      <div id="myMap" style="height:400px;width:670px;left:5px"></div>
    </div>
    <div class="modal-footer"></div>
</div>
