<div class="row-fluid">
    <div class="span8">
        <div class="row-fluid">
            <span class="span12"><h3>Действующие акции компании</h3></span>
        </div>
        {% for key,deal in company.deals %}
        {% if deal.endDate >= date() %}

        <div class="row-fluid thumbnail" style="margin-bottom:10px;">
            <div class="span8 ">
                <div id="myCarousel" class="carousel slide span12">
                  <!-- Carousel items -->
                  <div class="carousel-inner">
                        <div class="item active">
                            <img src="/../{{ storage_path }}/deal_image/{{ deal.imageName }}" class="img-polaroid" style="width: 100%; height: 40%;">
                        </div>
                        <div class="item ">
                            <img src="/../{{ storage_path }}/deal_image/{{ deal.imageName2 }}" class="img-polaroid" style="width: 100%; height: 40%;">
                        </div>
                        <div class="item ">
                            <img src="/../{{ storage_path }}/deal_image/{{ deal.imageName3 }}" class="img-polaroid" style="width: 100%; height: 40%;">
                        </div>
                  </div>
                  <!-- Carousel nav -->
                  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
                </div>
            </div>
            <div class="span4">
                {% if deal.draft == true %}
                <span class="label label-warning">Черновик</span>

                {% endif %}

                <h4><a href="{{ path('content_deal_show', {'id': deal.id}) }}"> {{ deal.name }} </a></h4>
                <p>
                    <strong>
                        {{ deal.startDate | date( 'Y-m-d' ) }} - {{ deal.endDate | date( 'Y-m-d' )}}
                    </strong><br />
                    {% for auto in deal.auto %}
                    {{auto}}
                    {% endfor %}
                </p>
                <p style="vertical-align:bottom;">
                    {{ deal.feedbacks | length }} отзыв(ов)
                    <br />
                    35 заинтересовавшихся
                </p>
                <a class="btn btn-large btn-block" href="{{ path('company_deal_edit' ,{'id': company.id,'dealId': deal.id }) }}">Редактировать</a>
                <a class="btn btn-large btn-block" href="{{ path('company_deal_delete' ,{'dealId':deal.id, 'id': company.id}) }}">Удалить</a>
            </div>
        </div>
        {% endif %}
        {% endfor %}
        <p>
            <h5><a href="{{ path('company_deal_arhive', {'id':company.id}) }}">Показать архивные акции</a></h5>
        </p>
    </div>
    <div class="span4">

        <a class="btn btn-large btn-block" href="{{ path('company_deal_new', {'id': company.id}) }}">Добавить акцию</a>
        <div class="thumbnail">
            <img src="http://placehold.it/240x400">
        </div>
    </div>
</div>
