{% spaceless %}
<ul class="services">
    {% for item in specializations %}
        {%- if loop.index < 4 %}
        <li class="servisesItem">
            {% if item.type.iconNameLarge %}
                <img src="/storage/images/company_icon/{{ item.type.iconNameLarge }}" width="34" height="40">
            {% else %}
                <img src="/bootstrap/img/icon-type-default.png" width="34" height="40">
            {% endif %}
            <span class="serviceName">{{ item.type.name }}</span>
        </li>
        {% endif -%}
    {% endfor %}
</ul>
<ul class="servicesAdd">
    {% for item in additionalServices %}
        {%- if loop.index < 8 %}
        <li class="servisesAddItem">
            {% if item.iconNameSmall %}
                <img src="/storage/images/company_icon/{{ item.iconNameSmall }}" width="24" height="28">
            {% else %}
                <img src="/bootstrap/img/icon-type-default.png" width="24" height="28">
            {% endif %}
        </li>
        {% endif %}
    {% endfor %}
</ul>
{% endspaceless %}
