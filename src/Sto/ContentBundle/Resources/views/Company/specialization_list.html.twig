{% set itemClass = 'servisesItem' %}
{% if specializations %}
    {% for item in specializations %}
        {% if loop.first %}
            <ul class="services">
        {% endif %}

        {% if loop.index == 4 %}
            </ul>
            <ul class="servicesAdd">
            {% set itemClass = 'servisesAddItem' %}
        {% endif %}

        <li class="{{ itemClass }}">
            {% if item.iconNameLarge %}
                <img src="/storage/images/company_icon/{{ item.iconNameLarge }}" width="34" height="40">
            {% else %}
                <img src="/bootstrap/img/icon-type-default.png" width="34" height="40">
            {% endif %}
            {%- if loop.index < 4 %}
                <span class="serviceName">{{ item.name }}</span>
            {% endif -%}
        </li>

        {% if loop.last %}
            </ul>
        {% endif %}
    {% endfor %}
{% endif %}
