{% for item in companies %}
<div class="cardCompanyItem" data-item-id="{{ item.id }}" id="list-company{{ item.id }}" data-correspond="x-list-company{{ item.id }}">
    <p class="index">
        <span class="indexbg"></span>
        <span class="indexLevel">{{item.rating}}</span></br>
        <span class="Otzyv">Отзывы: <span>{{item.feedbacks|length}}</span></span>
    </p>
    <div class="nameCompanyWrap">
        <p class="nameCompany"><a href="{{ path('content_company_show', {'id':item.id}) }}">{{item.name}}</a></p>
        <p class="adressCompany">{{item.address}}</p>
        {% if item.phones | length > 0 %}<p class="phoneCompany">{{item.phones[0].phone}}</p>{% endif %}
    </div>
    <div class="infoCompanyCont smallInfoCompany" id="blocSmall_{{ item.id }}">
        <ul class="iconSpecialisation">
        {% for key, specialization in item.specialization %}
            <li class="iconSpecialisationitem">
                {% if specialization.iconNameLarge %}
                    <img src="/storage/images/company_icon/{{ specialization.iconNameLarge }}" width="34" height="40">
                {% else %}
                    <img src="/bootstrap/img/icon-type-default.png" width="34" height="40">
                {% endif %}
            </li>
        {% endfor %}
    </div>
    <div class="infoCompanyCont bigInfoCompany" id="x-list-company{{ item.id }}" data-correspond="list-company{{ item.id }}" data-coord="{{ item.gps }}">
        <div class="popupCardCompanyCont">
            <div class="servicesPart">
                <ul class="services">
                {% for key, specialization in item.specialization %}
                    <li class="servisesItem">
                        {% if specialization.iconNameLarge %}
                            <img src="/storage/images/company_icon/{{ specialization.iconNameLarge }}" width="34" height="40">
                        {% else %}
                            <img src="/bootstrap/img/icon-type-default.png" width="34" height="40">
                        {% endif %}
                        <span class="serviceName">{{ specialization.name }}</span>
                    </li>
                {% endfor %}
            </div>
            <div class="infoCompany">
                {% if item.phones | length > 0 %}<p class="infoCompanyLable">Контактный телефон:</br>{{item.phones[0].phone}}</p>{% endif %}
                <p class="infoCompanyLable">
                    Часы работы:</br>
                    {%- for workPhase in item.workingTime %}
                        <span>{{ workPhase.from|date('H:i') }} - {{ workPhase.till|date('H:i') }} ({{ workPhase.days.string|lower }})</span>
                        {%- if not loop.last %}<br />{% endif -%}
                    {% endfor -%}
                </p>
                {% if item.web is not empty %}
                    <p class="infoCompanyLable">
                        Сайт:</br><span><a href="{{ item.web }}">{{ item.web }}</a></span>
                    </p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endfor %}

<script>
    $('.bigInfoCompany').hide();
    $('.cardCompanyItem').on('click', 'a', function(e){
        e.stopPropagation();
    });
</script>
