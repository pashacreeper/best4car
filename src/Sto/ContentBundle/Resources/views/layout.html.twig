<!DOCTYPE HTML>
<html lang="ru">
    <head>
        <meta charset="utf-8">
        <title>{% block title 'Best4Car' %}</title>

        {% block css %}
            {% stylesheets
                'bootstrap/css/bootstrap.css'
                'bootstrap/css/bootstrap-select.css'
                'bootstrap/css/bootstrap-responsive.css'
                'bootstrap/css/style.css'
                'bootstrap/css/style-po-ups.css'
                output='compiled/compiled.css'
            %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('bootstrap/css/custom.css') }}">

        <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic,700italic|PT+Sans+Narrow|PT+Sans+Caption&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Ubuntu&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
        <!--[if IE 7 ]><html class="ie7"> <![endif]-->
        <!--[if IE 8 ]><html class="ie8"> <![endif]-->
        <!--[if IE 9 ]><html class="ie9"> <![endif]-->
        <!--[if (gte IE 10)|!(IE)]><!--><html> <!--<![endif]-->

        <link rel="icon" href="/favicon.ico">

        {% block js %}
            {% javascripts
                'bootstrap/js/jquery.js'
                'bootstrap/js/jquery-ui-1.10.3.custom.js'
                'bootstrap/js/bootstrap.js'
                'bootstrap/js/jquery.mousewheel.js'
                'bootstrap/js/jquery.jscrollpane.js'
                'bootstrap/js/jquery.bxslider.min.js'
                'bootstrap/js/jquery.reveal.js'
                'bootstrap/js/selectbox.js'
                'bootstrap/js/selectbox1.js'
                'bootstrap/js/bootstrap-datetimepicker.min.js'
                'bootstrap/js/cookie.js'
                'bootstrap/js/custom.js'
                'bootstrap/js/custom.city-choice.js'
                'bootstrap/js/custom.companies-list.js'
                output='compiled/compiled.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}" type="text/javascript"></script>
        <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

        <!--[if IE]>
            <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>
    <body>
        {% block wrap_container_open %}<div class="main">{% endblock %}
        {% block map %}{% endblock %}
        <header id="header">
            <div class="topHeader">
                <div class="logoCont">
                    <h1 class="logo"><a class="logoLink" href="{{ path('_index') }}">best4car</a></h1>
                    <p class="slogan"><img src="{{ asset('/bootstrap/img/slogan.png') }}" alt="Автоэксперты рекомендуютлучшее для вашего авто!" /></p>
                </div>
                {% block navbar %}
                <div class="navCont">
                    {{ knp_menu_render('StoContentBundle:Builder:mainMenu', {'currentAsLink': true}) }}
                </div>
                {% endblock %}
                {% block signup %}
                    {% if app.user %}
                        {% set user = app.user %}
                        <div class="accountCont">
                        <a class="userImg btnUser" href="#">
                        {%- if user.avatarUrl %}
                            <img src="{{ user.avatarUrl | imagine_filter('user_login_avatar') }}" alt="фото пользователя" />
                        {% else %}
                            <img src="/bootstrap/img/default-user-icon.jpg" alt="фото пользователя" />
                        {% endif -%}
                        </a>
                        <p class="userName btnUser">{{ user.firstName }} {{ user.lastName }}</p>
                        <p class="userInfo">{{ user.ratingGroup }}<span class="userInfoLevel"><span class="indexbg"></span>{{ user.rating }}</span></p>
                        <div class="userDropdown">
                            <div id="myCanvasTop" class="myCanvasTop"></div>
                            <p class="popUpTitle">Ваш личный профиль</p>
                            <ul class="userProfilCont">
                                <li class="userProfilItem">
                                    <i class="iconProfilGray"></i>
                                    <a href="{{ path('fos_user_profile_show') }}" class="google-blue">Профиль</a>
                                </li>
                                <li class="userProfilItem">
                                    <i class="iconRemovReviewGray"></i>
                                    <a href="#" class="facebook-blue">Ответы на отзыв</a>
                                    <span class="amountProfil">231</span>
                                </li>
                            </ul>
                            {% if user.companyManager is not empty %}
                                <p class="popUpTitle">Компания Транспорт-Сервис</p>
                                <ul class="userProfilCont">
                                    <li class="userProfilItem">
                                        <i class="iconProfilGray"></i>
                                        <a href="#" class="google-blue">Профиль</a>
                                    </li>
                                    <li class="userProfilItem">
                                        <i class="iconReviewGray"></i>
                                        <a href="#" class="facebook-blue">Отзывы</a>
                                    </li>
                                    <li class="userProfilItem">
                                        <i class="iconActionGray"></i>
                                        <a href="#" class="facebook-blue">Акции</a>
                                    </li>
                                </ul>
                            {% endif %}
                            <p class="userDropBot"><a href="{{ path('fos_user_security_logout') }}" class="btnExit primaryLink regisrationLink">Выйти</a></p>
                        </div>
                    </div>
                    {% else %}
                        <div id="accountUnIdentified" class="accountCont">
                        <span class="enter">Войти в профиль<i class="iconarrow"></i></span>
                        <a href="#" class="registration regisrationLink" data-reveal-id="registration-popup">Регистрация</a>
                        <div class="enterDropdown">
                            {% render controller('StoUserBundle:User:userLogin') %}
                            <div class="enterCocial">
                                <span class="popUpTitle2">Войти используя аккаунт соц. сетей</span>
                                <ul class="enterCocialIcon">
                                    <li class="enterCocialIconItem">
                                        <a href="#" class="google-blue">Goole+</a>
                                    </li>
                                    <li class="enterCocialIconItem">
                                        <a href="#" class="facebook-blue">Facebook</a>
                                    </li>
                                    <li class="enterCocialIconItem">
                                        <a href="#" class="vk-blue">Вконтакте</a>
                                    </li>
                                </ul>
                            </div>
                            <a href="#" class="primaryLink regisrationLink" data-reveal-id="registration-popup">Регистрация</a>
                            <div id="myCanvasTop" class="myCanvasTop"></div>
                        </div>
                    </div>
                    {% endif %}
                {% endblock %}
            </div>
            <div class="bottomHeader row-fluid">
                {% block pageTitle %}{% endblock %}
                <div class="tounCont">
                    <img src="/bootstrap/img/spbimg.png" alt="Санкт-Петербург" />
                    <p class="townSelect" id="choice-city">Санкт-Петербург</p>
                    <div class="selectTownDropdown">
                        <div class="selectTownDropdownTop">
                            <p class="popUpTitle">Укажите ваш город</p>
                        </div>
                        <div class="selectTownDropdownCont tabs2">
                            <ul class="countrySelectTab tabNavigation2" id="country-select"></ul>
                            <div id="city-select" class="townSelectTabCont">
                                <ul class="townSelectTab"></ul>
                            </div>
                        </div>
                        <script type="text/javascript">
                            cityChoiser("{{ asset('bundles/stocore/images/notimage.png') }}", Routing);
                        </script>
                        <div id="myCanvasTop" class="myCanvasTop"></div>
                    </div>
                </div>
                {% block search %}
                    <div class="searchWrap">
                        <div class="searchCont">
                            <form class="form-search">
                                <label class="control-label" for="inputSearch">Я ищу:</label>
                                    <input type="text" id="inputSearch" class="input-medium search-query " placeholder="Все компании Санкт-Петербурга" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]) (?=.*[а-я]) (?=.*[А-Я]) (?=.*[0-9]).{8,}">
                                <p class="searchExample">Например:  <i class="btnLeft icon-white"></i><i class="btnRight icon-white"></i><span class="exampleName">ремонт двигателя Mazda3 спб</span></p>
                                <a href="#" class="btnSearch">
                                    <i class="iconSearch icon-search icon-white"></i>Найти
                                </a>
                            </form>
                        </div>
                    </div>
                {% endblock %}
            </div>
            {% block contentTop %}{% endblock %}
        </header>
        {% block content %}{% endblock %}
        <section class="footer">
            <div class="fotterCont">
                <p class="footerLogo"></p>
                <ul class="footerMenu">
                    <li class="footerMenuItem">
                        <a href="#">О проекте</a>
                    </li>
                    <li class="footerMenuItem">
                        <a href="#">Для рекламодателей</a>
                    </li>
                    <li class="footerMenuItem">
                        <a href="#">Для автобизнеса</a>
                    </li>
                    <li class="footerMenuItem">
                        <a href="#">Тур по сайту</a>
                    </li>
                    <li class="footerMenuItem">
                        <a href="#">Контакты</a>
                    </li>
                </ul>
                <ul class="footerCocial">
                    <li class="footerCocialItem">
                        <a href="#" class="google">Goole+</a>
                    </li>
                    <li class="footerCocialItem">
                        <a href="#" class="facebook">Facebook</a>
                    </li>
                    <li class="footerCocialItem">
                        <a href="#" class="vk">Вконтакте</a>
                    </li>
                </ul>
                <div id="linkUser"><a href="#">Условия использования сайта</a></div>
            </div>
        </section>
        {% if not app.user %}
            <div id="registration-popup" class="reveal-modal"><!-- popUp firstReg-->
                <a href="#" class="close-reveal-modal"></a>
                <p class="popUpTitle">Регистрация на best4car.ru</p>
                <p class="popUpTitle2">Кем вы хотите зарегистрироваться?</p>
                <a href="#" class="btnHowReg btnRegPeople" id="carOwnerRegister">
                    <i class="iconPeople"></i>
                    <span>Автовладельцем</span>
                </a>
                <a href="{{ path('registration_company_owner') }}" class="btnHowReg btnRegComp">
                    <i class="iconCompany"></i>
                    <span>Представителем компании</span>
                </a>
            </div>
            <div id="registration-form-popup" class="reveal-modal"><!-- popUp needAutorisation-->
                <a href="#" class="close-reveal-modal"></a>
                <p class="popUpTitle">Регистрация на best4car.ru</p>
                <div id="registration-container"></div>
                <div class="enterCocial">
                    <span class="popUpTitle2">Зарегистрироваться используя аккаунт соц. сетей</span>
                    <ul class="enterCocialIcon">
                        <li class="enterCocialIconItem">
                            <a href="#" class="google-blue">Goole+</a>
                        </li>
                        <li class="enterCocialIconItem">
                            <a href="#" class="facebook-blue">Facebook</a>
                        </li>
                        <li class="enterCocialIconItem">
                            <a href="#" class="vk-blue">Вконтакте</a>
                        </li>
                    </ul>
                </div>
            </div>
        {% endif %}
        {% block wrap_container_close %}</div>{% endblock %}

        <script type="text/javascript">
                    $(document).ready(function() {
                        $('.bigInfoCompany').hide();
                        $('.cardCompanyItem').click(function() {
                            $('#blocBig_' + this.id).slideToggle(0);
                            $('#blocSmall_' + this.id).slideToggle(0);
                        });
                    });
        </script>
        <script type="text/javascript">
                        $(document).ready(function(){
                            $('.btnFiltr').click(function(){
                                $(this).toggleClass('btnFiltrActive');
                            });
                            $('#cleanSearch').click(function(){
                                $('.btnFiltr').removeClass('btnFiltrActive');

                            });
                        });
        </script>
        <script>
          $(document).ready(function() {
            $("#slider-range-max").slider({
              range: "max",
              min: 1,
              max: 10,
              value: 4,
              slide: function( event, ui ) {
                $("#amount").val( ui.value );
              }
            });
            $("#amount").val( $("#slider-range-max").slider("value") );
          });
        </script>
        <script>
            $(document).ready(function(){
                $('.typeahead').typeahead()
            });
        </script>
    </body>
</html>
