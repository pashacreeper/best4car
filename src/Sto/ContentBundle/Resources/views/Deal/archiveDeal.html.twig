{% extends 'StoContentBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block header %}<h4>{{ block('title') }}</h4>{% endblock %}

{% block head_style %}
{{ parent() }}
<link href="{{ asset('bundles/stocore/css/select2.css') }}" type="text/css" rel="stylesheet" media="screen" />
{% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span8">
        <div class="row-fluid">
            <span class="span12"><h3>Архив компании</h3></span>
        </div>
        {% for deal in archive_deal %}
        <div class="row-fluid thumbnail" style="margin-bottom:10px;">
            <div class="span8 "><img src="http://placehold.it/494x280"></div>
            <div class="span4">
                {% if deal.draft == true %}
                <span class="label label-warning">Черновик</span>
                {% endif %}
                <h4><a href="{{ path('content_deal_show', {'id': deal.id} ) }}"> {{ deal.name }} </a></h4>
                <p>
                    <strong>
                        {{ deal.startDate | date( 'Y-m-d' ) }} - {{ deal.endDate | date( 'Y-m-d' )}}
                    </strong><br />
                    {% for auto in deal.auto %}
                    {{auto}}
                    {% endfor %}
                </p>
                <p style="vertical-align:bottom;">
                    {{ deal.feedbacks | length }} отзыв(ов)
                    <br />
                    35 заинтересовавшихся
                </p>
            {% set manager = false %}
            {% if app.security.isGranted('ROLE_USER') %}
            {% for item in company.managers if  item.id == app.user.id  %}
                 {% set manager = true %}
            {% endfor %}
            {% endif %}
                {% if app.security.isGranted('ROLE_ADMIN') or  manager  %}
                <a class="btn btn-large btn-block" href="{{ path('company_deal_delete' ,{'dealId': deal.id , 'id': companyId}) }}">Удалить</a>
                {% endif %}
            </div>
        </div>
        {% else %}
            {{ flash(true, 'Данные отсутствуют.', false, true) }}
        {% endfor %}

    </div>
    <div class="span4">

        <div class="thumbnail">
            <img src="http://placehold.it/240x400">
        </div>
    </div>
</div>
{% endblock %}
