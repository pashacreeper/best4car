{% extends 'StoContentBundle::layout.html.twig' %}

{% block title 'Акции' %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bootstrap/css/style-action.css') }}">    
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('bootstrap/js/script.js') }}"></script>
    <script src="{{ asset('bootstrap/js/slider.js') }}"></script>  
{% endblock %}

{% block wrap_container_open %}<div class="main">{% endblock %}
{% block wrap_container_close %}</div>{% endblock %}

{% block content %}
<section class="contentMain row tabs">
    <div class="contentWrap text-cont-l">
        <div class="content text-cont-r">
            <div id="leftBar" class="text-l">
                <ul class="menuLeftBar">
                    <li class="menuLeftBarItem">
                        <span class="menuTagEmpty">Все акции</span>
                        <span class="acctBtn">{{ deals | length }}</span>
                    </li>
                    {%- for dealsType in dictionaries %}
                        <li class="menuLeftBarItem">
                            <span class="menuTagEmpty" data-deal-type="{{ dealsType.id }}">{{ dealsType.name }}</span>
                            <span class="acctBtn">{{ dealsType.deals|length }}</span>
                        </li>
                    {% endfor -%}
                </ul>
                <div class="deviderLeftMenu"></div>
                <ul class="menuLeftBar leftBar2">
                    <li class="menuLeftBarItem">
                        <i class="iconLeftMPopular"></i>
                        <span class="menuTagEmpty">Популярные</span>
                        <span class="acctBtn">35</span>                                 
                    </li>
                    <li class="menuLeftBarItem">
                        <i class="iconLeftMReview"></i>
                        <span class="menuTagEmpty">С отзывами</span>
                        <span class="acctBtn">{{ countFeededDeals }}</span>
                    </li>                           
                </ul>
            </div>
            <div id="rightBar" class="text-r">  
                <div class="slider">
                    <div class="img__prev__wrap">   
                        <ul id="thumbnail" class="slide-wrap">
                        {% for deal in [random(deals), random(deals), random(deals)] %}
                            <li class="slide-item">
                                <a class="linh__img__prev" href="#">
                                    <p class="nameActionP">{{ deal.name }}</p>
                                    {% set image = "/" ~  storage_path ~ "/deal_image/" ~ deal.imageName %}
                                    <img src="{{ image | imagine_filter('deals_carusel_photos') }}" alt="{{ deal.name }}">
                                </a>
                            </li>
                        {% endfor %}                                                  
                        </ul>
                        <span name="prev" class="navy prev-slide"></span>
                        <span name="next" class="navy next-slide"></span>
                    </div>
                </div>
                {% for index in 1..6 %}
                    {% if index % 2 != 0 %}
                    <div class="actionItemCont">
                    {% endif %}
                    <div class="actionItemMini">
                        <a href="{{ path('content_deal_show', {'id': deals[index].id }) }}" class="actionItemLink">
                            {% set image = "/" ~ storage_path ~ "/deal_image/" ~ deals[index].imageName %}
                            <img src="{{ image | imagine_filter('deals_photos') }}" alt="фото пользователя" />
                            <div class="actionItemBottomWrap">
                                <div class="actionItemBottom">
                                    <h4>{{ deals[index].name }}</h4>
                                    <p>{{ deals[index].company.name }} <span class="indexLevelMini"><span class="indexBgMini"></span>{{ deals[index].company.rating }}</span></p>
                                    <p class="bottomP"><span class="actionItemBottomP">Все автомобили</span><span class="actionItemBottomSpan">{{ deals[index].startDate | date('d.m') }} - {{ deals[index].endDate | date('d.m') }}</span></p>
                                </div>  
                            </div>
                        </a>
                    </div>
                    {% if index % 2 == 0 %}
                    </div>
                    {% endif %}
                {% endfor %}
                <script type="text/javascript">     
                    $(document).ready(function() {
                        $('.actionItemLink').mouseenter(function() {                                  
                            $(this).children('.actionItemBottomWrap').css("top", "90px");
                        }); 
                        $('.actionItemLink').mouseleave(function() {
                            $(this).children('.actionItemBottomWrap').css("top", "120px");
                        }); 
                    });     
                </script>
                <div class="bottomContent">
                    <span class="secondaryLink saveDraft">Показать еще</span>
                </div>
            </div>
            <div class="clear"></div>                       
        </div>                  
    </div>
</section>
{% endblock %}
