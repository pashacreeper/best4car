<div class="row-fluid">
    <div class="span8">
        <div class="row-fluid">
            <div class="span12">
                <div id="myCarousel" class="carousel slide">
                      <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                      </ol>
                      <!-- Carousel items -->
                      <div class="carousel-inner">
                        <div class="item active"><img src="/../{{ storage_path }}/deal_image/{{ deal.imageName }}" class="img-polaroid" style="width: 100%; height: 40%;"></div>
                        <div class="item"><img src="/../{{ storage_path }}/deal_image/{{ deal.imageName2 }}" class="img-polaroid" style="width: 100%; height: 40%;"></div>
                        <div class="item"><img src="/../{{ storage_path }}/deal_image/{{ deal.imageName3 }}" class="img-polaroid" style="width: 100%; height: 40%;"></div>
                      </div>
                      <!-- Carousel nav -->
                      <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                      <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
                </div>
            </div>
            <div class="span8">
                {% if deal.description is not empty %}
                    <h4>Описание акции</h4>
                    <p>{{ deal.description }}</p>
                {% endif %}
                <h4>Условия участия</h4>
                <p>{{ deal.terms}}</p>
                <div style="height:60px; border:1px solid #000; background-color: #cccccc;"><span class="span4" style="font-weight:bold; font-size:16px;">Контакты</span><p class="span8" style="fon-size:10px;">{{ deal.contactInformation}}</p></div>
            </div>
            <div class="span3">
                <h4>Сроки проведения</h4>
                <p>{{ deal.startDate|date("d.m.Y") }} – {{ deal.endDate|date("d.m.Y") }}</p>
                <hr>
                <h4>Время проведения</h4>
                <p>{{ deal.startTime|date("H:i") }} – {{ deal.endTime|date("H:i") }}</p>
                <hr>
                <h4>Место проведения</h4>
                <p>{{ deal.place }}</p>
                <hr>
                <h4 style="margin-bottom:0px;">Автомобили</h4> <span style="font-size:10px; margin-bottom:10px;">удовлетворяющие условиям акции</span>
                <p>{% for car in deal.auto %}
                    {{ car }}
                {% endfor %}</p>
                <hr>
                {% if deal.autoServices %}
                    <h4 style="margin-bottom:0px;">Работы</h4> <span style="font-size:10px; margin-bottom:10px;">удовлетворяющие условиям акции</span>
                    {% for one in deal.autoServices %}
                        {{ one.name() }} <br />
                    {% endfor %}
                    <hr>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="span4">
        <a class="btn btn-large" style="width:200px;margin-top:10px;" href="{{ path('fos_user_security_login') }}">Я пойду <span class="pull-right">245</span></a>
        <a href="{{ path("content_deal_feedbacks_add", {'id':deal.id}) }}" class="btn btn-large" style="width:200px;margin-top:10px;">Оставить отзыв <span class="pull-right">{{ deal.feedbacks | length }}</span></a>
        {% if isManager %}
            <a href="{{ path("company_deal_edit", {'id':deal.company.id, 'dealId':deal.id}) }}" class="btn btn-large" style="width:200px;margin-top:10px;">Редактировать</a>
        {% endif %}
        <a href="#"><img src="" style="background: #000000; width:240px; height:400px; margin-top: 10px;" /></a>
    </div>
</div>
