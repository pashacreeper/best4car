<div class="row-fluid">
    <div class="span9">
        <div class="row-fluid">
            <div class="span12">
                <div id="myCarousel" class="carousel slide">
                    <div class="carousel-inner">
                        <div class="item active"><img src="/../{{ storage_path }}/deal_image/{{ deal.imageName }}" class="img-polaroid" style="width: 100%; height: 275px;"></div>
                        <div class="item"><img src="/../{{ storage_path }}/deal_image/{{ deal.imageName2 }}" class="img-polaroid" style="width: 100%; height: 275px;"></div>
                        <div class="item"><img src="/../{{ storage_path }}/deal_image/{{ deal.imageName3 }}" class="img-polaroid" style="width: 100%; height: 275px;"></div>
                    </div>
                    <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                    <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span8">
{% if deal.description %}
                <div class="row-fluid">
                    <h4>Описание акции</h4>
                    <p>{{ deal.description }}</p>
                </div>
{% endif %}
{% if deal.terms %}
                <div class="row-fluid">
                    <h4>Условия участия</h4>
                    <p>{{ deal.terms }}</p>
                </div>
{% endif %}
{% if deal.contactInformation %}
                <div class="row-fluid">
                    <h4>Контакты</h4>
                    <div style="well">
                        <p>{{ deal.contactInformation }}</p>
                    </div>
                </div>
{% endif %}
            </div>
            <div class="span4">
                <div class="row-fluid">
                    <h4>Сроки проведения</h4>
                    <p>{{ deal.startDate|date("d.m.Y") }} – {{ deal.endDate|date("d.m.Y") }}</p>
                </div>
                <div class="row-fluid">
                    <h4>Время проведения</h4>
                    <p>{{ deal.startTime|date("H:i") }} – {{ deal.endTime|date("H:i") }}</p>
                </div>
{% if deal.place %}
                <div class="row-fluid">
                    <h4>Место проведения</h4>
                    <p>{{ deal.place }}</p>
                </div>
{% endif %}
{% if deal.auto|length %}
                <div class="row-fluid">
                    <h4>Автомобили</h4>
{% for car in deal.auto %}
                    <p>{{ car }}</p>
{% endfor %}
                </div>
{% endif %}
{% if deal.autoServices|length %}
                <div class="row-fluid">
                    <h4>Работы</h4>
{% for one in deal.autoServices %}
                    <p>{{ one.name }}</p>
{% endfor %}
                </div>
{% endif %}

            </div>
        </div>
    </div>
    <div class="span3">
        <a href="{{ path("content_deal_feedbacks_add", {'id':deal.id}) }}" class="btn btn-large" style="width:200px;margin-top:10px;">
            Оставить отзыв
            <span class="pull-right">{{ deal.feedbacks|length }}</span>
        </a>
{% if isManager %}
        <a href="{{ path("company_deal_edit", {'id':deal.company.id, 'dealId':deal.id}) }}" class="btn btn-large" style="width:200px;margin-top:10px;">Редактировать</a>
{% endif %}
        <a href="#"><img src="" style="background: #000000; width:240px; height:400px; margin-top: 10px;"/></a>
    </div>
</div>
