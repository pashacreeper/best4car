{% extends 'StoContentBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title 'Отзыв на акцию' %}


{% block content %}
<div class="row-fluid">
    <div class="span8"><h3>Ваш отзыв об акции</h3><h4>{{ deal.name }}</h4></div>
    <div class="span4">
        Рейтинг компании<br />
        {{ deal.company.rating }}
    </div>
</div>
<div class="row-fluid">
    <div class="span8">
        <div class="row-fluid"  style="background: #ccc;">
            <div class="span3">
                <strong>Ваша оценка <br />акции:</strong>
            </div>
            <div class="span9">
                <i class="icon-star"></i>
                <i class="icon-star"></i>
                <i class="icon-star"></i>
                <i class="icon-star"></i>
                <i class="icon-star-empty"></i>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span3"><strong>Текст отзыва</strong><br />(необязательно)</div>
            <div class="span9" style="margin-top:10px;">
                <textarea style="width:97%; height:270px;"></textarea>
                <input type="submit" value="Отправить отзыв" />
            </div>
        </div>
    </div>
    <div class="span4">
        <a href="#"><img src="" style="background: #000000; width:240px; height:400px; margin-top: 10px;" /></a>
    </div>
</div>


{% endblock %}
