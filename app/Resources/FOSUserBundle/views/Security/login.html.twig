{% extends 'StoAdminBundle::layout.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import flash %}

{% block title %}Sign in{% endblock %}
{% block head_style %}
{{ parent() }}
<style type="text/css">
    body { padding-top: 40px; padding-bottom: 40px; background-color: #f5f5f5; }
    .form-signin { max-width: 385px; padding: 19px 29px 29px; margin: auto; background-color: #fff; border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px; -moz-border-radius: 5px; border-radius: 5px; -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05); box-shadow: 0 1px 2px rgba(0,0,0,.05); }
    .form-signin .form-signin-heading { margin-bottom: 10px; }
    .form-signin input[type="text"], .form-signin input[type="password"] { font-size: 16px; height: auto; margin-bottom: 15px; padding: 7px 9px; }
</style>
{% endblock %}

{% block navbar_container %}
{% block navbar %}{% endblock %}
{% endblock %}

{% block body_tag %}
<body data-spy="scroll" class="login-screen">
{% endblock %}

{% block flashes %}{% endblock %}

{% block content %}
<div class="container">
{% block fos_user_content %}
    <div class="row">
        <div class="span6 offset3 well">
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
                <legend>{{ 'login.sign_in_text'|trans({}) }}</legend>
                {% if error %}


                {{ flash('error', 'login.alerts.wrong_pass'|trans({}) , true, true) }}
                {% endif %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <input type="text" class="input-block-level" placeholder="E-mail" id="username" name="_username" value="{{ last_username }}" />
                <input type="password" class="input-block-level" placeholder="{{ 'login.password'|trans({}) }}" id="password" name="_password" />
                <input class="btn btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'login.sign_in'|trans({}) }}" />
            </form>
        </div>
    </div>
{% endblock fos_user_content %}
</div>
{% endblock %}

{% block footer %}{% endblock %}
